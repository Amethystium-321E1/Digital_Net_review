@article{ WOS:000088608000103,
	Author = {Skyrms, B and Pemantle, R},
	Title = {A dynamic model of social network formation},
	Journal = {PROCEEDINGS OF THE NATIONAL ACADEMY OF SCIENCES OF THE UNITED STATES OF
	AMERICA},
	Year = {2000},
	Volume = {97},
	Number = {16},
	Pages = {9340-9346},
	Month = {AUG 1},
	Abstract = {We consider a dynamic social network model in which agents play repeated
	games in pairings determined by a stochastically evolving social
	network. Individual agents begin to interact at random, with the
	interactions modeled as games. The game payoffs determine which
	interactions are reinforced, and the network structure emerges as a
	consequence of the dynamics of the agents' learning behavior. We study
	this in a variety of game-theoretic conditions and show that the
	behavior is complex and sometimes dissimilar to behavior in the absence
	of structural dynamics. We argue that modeling network structure as
