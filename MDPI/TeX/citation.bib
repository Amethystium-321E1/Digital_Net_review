@article{ WOS:000314859600012,
	Author = {Kimbu, Albert N. and Ngoasong, Michael Z.},
	Title = {CENTRALISED DECENTRALISATION OF TOURISM DEVELOPMENT: A NETWORK
	PERSPECTIVE},
	Journal = {ANNALS OF TOURISM RESEARCH},
	Year = {2013},
	Volume = {40},
	Pages = {235-259},
	Month = {JAN},
	Abstract = {While there is increasing recognition of the positive impacts of tourism
	on economic development in Sub-Saharan Africa, existing relationships
	between tourism industry stakeholders is fraught with challenges that
	constrain its development. Drawing on social network theory and
	stakeholder theory and through a series of key informant semi-structured
	interviews with tourism industry stakeholders, the paper explores the
	nature of participation by destination stakeholders in formulating and
	implementing tourism policy in Cameroon. It then explores a model of
	tourism development built around a centrally coordinated but
	decentralized tourism network that reaches out to all representative
	stakeholders when formulating and implementing tourism policies. The
	challenges involved in mobilizing destination stakeholders into such a
	system to allow for effective tourism development are critically
	examined.},
	DOI = {10.1016/j.annals.2012.09.005},
	ISSN = {0160-7383},
	EISSN = {1873-7722},
