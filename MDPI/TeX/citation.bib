}

@article{ WOS:000548819300004,
	Author = {Kim, Amy Chan Hyung and Newman, Joshua I. and Kwon, Woong},
	Title = {Developing community structure on the sidelines: A social network
	analysis of youth sport league parents},
	Journal = {SOCIAL SCIENCE JOURNAL},
	Year = {2020},
	Volume = {57},
	Number = {2},
	Pages = {178-194},
	Month = {APR 2},
	Abstract = {The extant literature suggests that the formation of social networks
	within local communities may be linked to both positive (e.g., health,
