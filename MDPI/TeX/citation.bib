}

@article{ WOS:000411771300004,
	Author = {Bastomski, Sara and Brazil, Noli and Papachristos, Andrew V.},
	Title = {Neighborhood co-offending networks, structural embeddedness, and violent
	crime in Chicago},
	Journal = {SOCIAL NETWORKS},
