}

@article{ WOS:000188853000005,
	Author = {Bruinsma, G and Bernasco, W},
	Title = {Criminal groups and transnational illegal markets - A more detailed
	examination on the basis of Social Network Theory},
	Journal = {CRIME LAW AND SOCIAL CHANGE},
	Year = {2004},
	Volume = {41},
	Number = {1},
	Pages = {79-94},
	Month = {FEB},
	Abstract = {In the study of organised crime, the traditional view of criminal groups
	as centrally controlled organisations has been replaced by the notion of
	criminal networks. However, little use has been made of concepts and
	theories of social networks that have developed in other social
	sciences. This paper uses concepts from social network theory to
	describe and tentatively explain differences in social organisation
	between criminal groups that perform three types of transnational
	illegal activities: smuggling and large-scale heroine trading,
	trafficking in women, and trading stolen cars. Groups that operate in
	the large-scale heroin market tend to be close-knit, cohesive and
	ethnically homogenous. Groups active in the trafficking of women have a
	chain structure, while those that operate in the market for stolen cars
	are characterised by three clusters of offenders in a chain. Both groups
	are less cohesive than criminal groups in the large-scale heroin market.
	The differences in social organisation between the three types of
	illegal activities appear to be related to the legal and financial risks
	associated with the crimes in question, and thereby to the required
	level of trust between collaborating criminals.},
