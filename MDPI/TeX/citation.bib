@article{ WOS:000285898100013,
	Author = {Smangs, Mattias},
	Title = {Delinquency, Social Skills and the Structure of Peer Relations:
	Assessing Criminological Theories by Social Network Theory},
	Journal = {SOCIAL FORCES},
