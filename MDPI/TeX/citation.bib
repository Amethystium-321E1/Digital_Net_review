@article{ WOS:000333870700009,
	Author = {Haight, Michael and Quan-Haase, Anabel and Corbett, Bradley A.},
	Title = {Revisiting the digital divide in Canada: the impact of demographic
	factors on access to the internet, level of online activity, and social
	networking site usage},
