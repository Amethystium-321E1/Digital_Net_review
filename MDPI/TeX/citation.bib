@article{ WOS:000386738500005,
	Author = {Miyauchi, Yuhei},
	Title = {Structural estimation of pairwise stable networks with nonnegative
	externality},
	Journal = {JOURNAL OF ECONOMETRICS},
	Year = {2016},
	Volume = {195},
	Number = {2},
	Pages = {224-235},
	Month = {DEC},
	Abstract = {This paper develops a framework to structurally estimate pairwise stable
	networks with nonnegative externality. We characterize pairwise stable
	equilibria as a fixed point of a certain mapping and show that the set
	of pairwise stable equilibria with nonnegative externality is a complete
	lattice. We extend the characterization to an econometric framework for
	structural estimation based on the moment inequality model. We apply our
	methodology to friendship networks of students in the United States,
	using data from Add-Health. We find that the preference toward racial
	homophily is overestimated if we do not control for the preference
