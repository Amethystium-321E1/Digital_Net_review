	Christakis, Nicholas/B-6690-2008
	Fowler, James/C-2750-2008
	},
	ORCID-Numbers = {Fowler, James/0000-0001-7795-1638
	Rand, David/0000-0001-8975-2783},
	Unique-ID = {WOS:000322361200060},
}

@article{ WOS:000299154500009,
