@article{ WOS:000251215900004,
	Author = {Kmec, Julie A.},
	Title = {Ties that bind? Race and networks in job turnover},
	Journal = {SOCIAL PROBLEMS},
	Year = {2007},
	Volume = {54},
	Number = {4},
	Pages = {483-503},
	Month = {NOV},
	Note = {101st Annual Meeting of the American-Sociological-Association, Montreal,
	CANADA, AUG 11-14, 2006},
	Organization = {Amer Sociol Assoc},
	Abstract = {This article seeks to clarify the role of race and social networks in
