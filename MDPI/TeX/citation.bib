	Article-Number = {e0237471},
	ISSN = {1932-6203},
	ResearcherID-Numbers = {Rehm, Martin/ABG-3180-2020
	},
	ORCID-Numbers = {Rehm, Martin/0000-0002-9553-7008},
	Unique-ID = {WOS:000562668300074},
}

@article{ WOS:000541611100004,
	Author = {Coscia, Michele and Rossi, Luca},
	Title = {Distortions of political bias in crowdsourced misinformation flagging},
	Journal = {JOURNAL OF THE ROYAL SOCIETY INTERFACE},
	Year = {2020},
	Volume = {17},
	Number = {167},
	Month = {JUN 24},
	Abstract = {Many people view news on social media, yet the production of news items
	online has come under fire because of the common spreading of
	misinformation. Social media platforms police their content in various
	ways. Primarily they rely on crowdsourced `flags': users signal to the
	platform that a specific news item might be misleading and, if they
	raise enough of them, the item will be fact-checked. However, real-world
	data show that the most flagged news sources are also the most popular
	and-supposedly-reliable ones. In this paper, we show that this
	phenomenon can be explained by the unreasonable assumptions that current
	content policing strategies make about how the online social media
	environment is shaped. The most realistic assumption is that
	confirmation bias will prevent a user from flagging a news item if they
	share the same political bias as the news source producing it. We show,
	via agent-based simulations, that a model reproducing our current
	understanding of the social media environment will necessarily result in
	the most neutral and accurate sources receiving most flags.},
	DOI = {10.1098/rsif.2020.0020},
