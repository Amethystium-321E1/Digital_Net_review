}

@article{ WOS:000340338600006,
	Author = {Savage, David and Zhang, Xiuzhen and Yu, Xinghuo and Chou, Pauline and
	Wang, Qingmai},
	Title = {Anomaly detection in online social networks},
	Journal = {SOCIAL NETWORKS},
	Year = {2014},
	Volume = {39},
	Pages = {62-70},
	Month = {OCT},
	Abstract = {Anomalies in online social networks can signify irregular, and often
	illegal behaviour. Detection of such anomalies has been used to identify
	malicious individuals, including spammers, sexual predators, and online
	fraudsters. In this paper we survey existing computational techniques
	for detecting anomalies in online social networks. We characterise
	anomalies as being either static or dynamic, and as being labelled or
	unlabelled, and survey methods for detecting these different types of
	anomalies. We suggest that the detection of anomalies in online social
	networks is composed of two sub-processes; the selection and calculation
	of network features, and the classification of observations from this
